<%- include('bootheader') -%>
<%- include('navbar') -%>

<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    * {
      box-sizing: border-box;
    }

    #myInput {
      background-image: url('/css/searchicon.png');
      background-position: 10px 12px;
      background-repeat: no-repeat;
      width: 100%;
      font-size: 16px;
      padding: 12px 20px 12px 40px;
      border: 1px solid #ddd;
      margin-bottom: 12px;
    }

    #myUL {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    #myUL li a {
      border: 1px solid #ddd;
      margin-top: -1px; /* Prevent double borders */
      background-color: rgba(50,115,220,0.3);
      padding: 12px;
      text-decoration: none;
      font-size: 18px;
      color: black;
      display: block
    }

    #myUL li a:hover:not(.header) {
      background-color: #eee;
    }
    
  @font-face {
    font-family: 'Nucleo Outline';
    src: url("https://github.com/creativetimofficial/now-ui-kit/blob/master/assets/fonts/nucleo-outline.eot");
    src: url("https://github.com/creativetimofficial/now-ui-kit/blob/master/assets/fonts/nucleo-outline.eot") format("embedded-opentype");
    src: url("https://raw.githack.com/creativetimofficial/now-ui-kit/master/assets/fonts/nucleo-outline.woff2");
    font-weight: normal;
    font-style: normal;

  }

  .now-ui-icons {
    display: inline-block;
    font: normal normal normal 14px/1 'Nucleo Outline';
    font-size: inherit;
    speak: none;
    text-transform: none;
    /* Better Font Rendering */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .title1 {
    font-weight: 700;
    padding-top: 1000px;
    margin-top: -250px; /* Prevent double borders */
    padding: 1px;
    text-decoration: none;
    font-size: 30px;
    color: black;
    display: block
  }
  .description1 {
    color: #000000;
    font-weight: 1000;
  }
  img.thumbImg {
    max-width: 300px;
  }

  </style>
</head>
<body>


  <h2>
    Conventions
  </h2>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal44">
    Add Convention
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal44" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel44" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel44"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%- include('addConvention') -%>
        </div>
      </div>
    </div>
  </div>


  <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">

  <div class="container">
    <ul id="myUL">
      <h3>PENDING</h3>
      <% for(i = 0; i<conventions.length; i++){  %>
        <% if (conventions[i].Approval == false) { %>
           <a href="/showConvention/<%= conventions[i]._id %>">
          <div class="section section-team text-center">
          <div class="container">
          <div class="team">
          <div class="row">
          <div class="col-md-6">
          <div class="team-player">
          <img src= <%= conventions[i].Picture %> alt="Thumbnail Image" class= "thumbImg">
          <h4 class="title"><%= conventions[i].Name %></h4>
          <p class="category text-primary"><%= conventions[i].Location%> </p>
          <p class="category text-primary"><%= conventions[i].From %> -<%= conventions[i].To %></p>
          <p class="description1"><%= conventions[i].Description %></p>
          <a href="https://twitter.com/Comic_Con?ref_src=twsrc%5Egoogle%7Ctwcamp%5Eserp%7Ctwgr%5Eauthor" class="btn btn-primary btn-icon btn-round"><i class="fab fa-twitter"></i></a>
          <a href="#https://www.instagram.com/comic_con/?hl=en" class="btn btn-primary btn-icon btn-round"><i class="fab fa-instagram"></i></a>
          <a href="#pablo" class="btn btn-primary btn-icon btn-round"><i class="fab fa-facebook-square"></i></a>
          </div>
          </div>
          </div>
          </div>
          </div>
          <br>

          <% } %>
          <% } %>
        </ul>
      </div>
      <div class="container">
        <ul id="myUL">
          <h3>ACCEPTED</h3>
          <% for(i = 0; i<conventions.length; i++){  %>
            <% if (conventions[i].Approval == true) { %>
              <li> <a href="/showConvention/<%= conventions[i]._id %>">
              <div class="section section-team text-center">
              <div class="container">
              <div class="team">
              <div class="row">
              <div class="col-md-4">
              <div class="team-player">
              <img src=<%= conventions[i].Picture %> alt="Thumbnail Image" class= "thumbImg">
              <h4 class="title"><%= conventions[i].Name %></h4>
              <p class="category text-primary"><%= conventions[i].From %> -<%= conventions[i].To %></p>
              <p class="description"><%= conventions[i].Description %></p>
              <a href="#pablo" class="btn btn-primary btn-icon btn-round"><i class="fab fa-twitter"></i></a>
              <a href="#pablo" class="btn btn-primary btn-icon btn-round"><i class="fab fa-instagram"></i></a>
              <a href="#pablo" class="btn btn-primary btn-icon btn-round"><i class="fab fa-facebook-square"></i></a>
              </div>
              </div>
              <br>
              </li>
              <% } %>
              <% } %>
            </ul>
          </div>

          <div>
          </div>
          <script>
          function myFunction() {
            var input, filter, ul, li, a, i, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            ul = document.getElementById("myUL");
            li = ul.getElementsByTagName("li");
            for (i = 0; i < li.length; i++) {
              a = li[i].getElementsByTagName("a")[0];
              txtValue = a.textContent || a.innerText;
              if (txtValue.toUpperCase().indexOf(filter) > -1) {
                li[i].style.display = "";
              } else {
                li[i].style.display = "none";
              }
            }
          }
        </script>

      </body>
      </html>

      <%- include('bootfooter') -%>
