<style>
h1 {
  color: white;
  text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;

}

</style>

<%- include('bootheader') -%>
<%- include('navbar') -%>

<form method="post" action="/processApprove" >
    <input type="hidden" name="convid" value="<%= convention._id %>" >
<button type="submit" name="Approval">Approved</button>
</form>
<form method="post" action="/processDeny/" >
    <input type="hidden" name="convid" value="<%= convention._id %>" >
<button type="submit" name="Approval">Denied</button>
</form>

<div class="wrapper">
  <div>
    <a href="/editConvention/<%= convention._id %>" class="btn btn-primary" role="button" aria-pressed="true">edit</a>
  </div>

  // if user.followCon.includes(req.params.convid)
    <div>
    <form method="post" action="/processUnfollowCon" >
      <button type="submit" name="unfollowCon">unfollow</button>
    </form>
    </div>
  // else
    <div>
    <form method="post" action="/processFollowCon" >
      <button type="submit" name="followCon">follow</button>
    </form>
    </div>

	<div class="page-header page-header-small">
		<div class="page-header-image" data-parallax="true" style="background-image: url('<%= convention.Picture %>');">
		</div>
		<div class="content-center">
			<div class="container">
				<h1 class="title"><%=  convention.Name  %></h1>
				<div class="text-center">
          <h5><span class="badge badge-warning"><%= convention.Badges %></span></h5>
          <a class="btn btn-success" href="<%=convention.Website%>" role="button">Official Website</a>
          <a class="btn btn-primary" href="<%=convention.Facebookgroup%>" role="button">Facebook Group</a>
        </div>
      </div>
    </div>
  </div>

  <div id="accordion" role="tablist" aria-multiselectable="true" class="card-collapse">
    <div class="card card-plain">
      <div class="card-header" role="tab" id="headingOne">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          General Information:

          <i class="now-ui-icons arrows-1_minimal-down"></i>
        </a>
      </div>

      <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne">
        <div class="card-body">
  <h3> <center> Dates: <%= convention.From  %> to <%= convention.To  %> </center>  </h3>
        <h4> Location: <%= convention.Location %> </h4>
      <h6>   Description: <%= convention.Description %><br> <h6>
          Schedule of Events: <br><%= convention.Schedule %><br><br>

        </div>

        <h2>Celebrities</h2>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal21">
          Add Celebrity
        </button>

        <!-- Modal -->

        <div class="modal fade" id="exampleModal21" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel21" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel21">Celebrity</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%- include('celebrity') -%>
              </div>
            </div>
          </div>
        </div>


        <%- include('celebrityList') -%>
        <h2>Vendors</h2>
        <!-- Button trigger modal -->

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal13">
          Add Vendors
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal13" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel13" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel13">Vendor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%- include('vendor') -%>
              </div>
            </div>
          </div>
        </div>

        <%- include('vendorList') -%>
        <h2>Moderators</h2>
        <%- include('modList') -%>

        <div>

          <form method="post" action="/processRequest/<%= convention._id %>">
            <%# Hey = user.googlename,%>
            why you're qualified: <br> <textarea name="m_reason"></textarea><br>
            <br>
            <input class="btn btn-lg btn-warning" type="submit">
          </form>
        </div>
      </div>
    </div>
    <div class="card card-plain">
      <div class="card-header" role="tab" id="headingTwo">
        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Hotels and Flights
          <i class="now-ui-icons arrows-1_minimal-down"></i>
        </a>
      </div>
      <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo">
        <div class="card-body">
          <%- include('cheapoair') -%>
        </div>
      </div>
    </div>
    <div class="card card-plain">
      <div class="card-header" role="tab" id="headingThree">
        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          Map

          <i class="now-ui-icons arrows-1_minimal-down"></i>
        </a>
      </div>
      <div id="collapseThree" class="collapse" role="tabpanel" aria-labelledby="headingThree">
        <div class="card-body">
          <%- include('mapapi') -%>
        </div>
      </div>
    </div>
    <div class="card card-plain">

    </div>

  </div>
</div>

<br><br>
<%- include('bootfooter') -%>
