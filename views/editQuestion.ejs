<%- include('bootheader'); -%>
<%- include('navbar'); -%>

  <div class="jumbotron masthead text-center" id="north">
    <div class="card mx-auto" id="cardStyle">
      <div class="card-body">
        <h1>Edit Your Question Here!</h1>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-body">
            <form method="post" action="/showQuestion/<%=req.params.id%>/editQuestion/processQuestionPost">
              <div class="form-group">
                <h5 class="card-header">Title</h5>
                <input type="text" class="form-control" id="question" name="question" value="<%=question.question%>"><br>
              </div>
              <div class="form-group">
                <h5 class="card-header">Description</h5>
                <textarea class="form-control" name ="description" rows="6"><%=question.description%></textarea>
              </div>
              <input class="btn btn-primary" type="submit">
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>
